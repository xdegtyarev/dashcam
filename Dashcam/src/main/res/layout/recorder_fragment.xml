<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xdegtyarev.dashcam.MainActivity.MainScreenFragment">
    <FrameLayout
        android:id="@+id/cameraPreviewPlaceholder"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    </FrameLayout>
    <ImageView
        android:id="@+id/record_button"
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/ic_record_button"/>
    <ImageButton
        android:id="@+id/toggle_location_recording"
        android:layout_width="64dip"
        android:layout_height="64dip"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        android:src="@drawable/ic_record_location"/>
    <ImageButton
        android:id="@+id/toggle_menu_button"
        android:layout_width="48dip"
        android:layout_height="64dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:paddingLeft="44dip"
        android:layout_marginRight="128dip"
        android:background="#FFFFFF"
        android:src="@drawable/ic_drawer"/>
</RelativeLayout>
